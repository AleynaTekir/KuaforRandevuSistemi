        <div class="wrapper1 ">
            <div class="row">
                <div class="col-lg-12"><hr /> </div>
                <div class="col-md-4"><div style="margin-right:40px;" class="wrapper5"><img style=" border-style: groove; width: 450px; height: 300px; " src="~/kuaför/image/kuafördetay.png" class="card-img-top" alt="..."></div></div>
                <div class="col-md-5">
                    <div class="row">
                        <div style="margin-left:250px;" class="col-md-10">


                            <div style="margin-top:40px;" class="col-md-11">
                                @foreach (var item in Model.Item2)
                                {

                                    <div>
                                        <hı style="margin-top: 40px; " class="h1-text">@item.AD        </hı>

                                    </div>
                                   
                                    <div>
                                        <h5>

                                            (@item.puan)
                                            @for (var i = 1; i <= Math.Round(((double)@item.puan)); i++)
                                            {

                                                <i style="color:yellow;" class="fa-solid fa-star"></i>
                                            }


                                            @for (var j = 1; j <= Math.Round(((double)(5 - item.puan))); j++)
                                            {

                                                <i style="color:silver;" class="fa-solid fa-star"></i>

                                            }
                                        </h5>
                                    </div>
                                    <p> @Model.Item3.Count() değerlendirme</p>
                                }
                                <hr />
                                @foreach (var iem in Model.Item2)
                                {
                                    <h3 class="h2-text"><i style="color: #534369; margin-right: 10px;" class="fa-solid fa-location-dot"></i>@iem.Adres</h3>
                                    <p class="h3-text"><i style="color: #534369;" class="fa-regular fa-clock"></i>  @iem.açılış_saati -@iem.kapanış_saati</p>
                                    <p><i style="color: #534369; margin-right:10px;" class="fa-solid fa-phone"></i>@iem.Telefon_numarası</p>
