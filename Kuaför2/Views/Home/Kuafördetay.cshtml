            <div class="wrapper6">
                <h3>Müşteri Yorumları</h3>

                <div style="margin-top:40px;" class="col-md-11">
                    @foreach (var item in Model.Item3)

                    {
                        <div class="col-lg-12"><hr /> </div>
                        <div class="icon-container">
                            <i style="color:silver; font-size:80px;" class="fa-solid fa-circle-user"></i>
                            <span class="icon-text"> @item.müşterivm.Ad  @item.müşterivm.Soyad</span>
                        </div>
                        <div class="wrapper7"><p style="font-family:Calibri;"> @item.değerlendirmevm.Yorum</p></div>

                        for (var i = 1; i <= @item.değerlendirmevm.Puan; i++)
